[32m+[m[32mimport { IProjectRepository } from '../../domain/repos-interfaces/project-repository';[m
[32m+[m[32mimport { Project } from '../../domain/entities/project';[m
[32m+[m[32mimport { ProjectName } from '../../domain/value-objects/project-name';[m
[32m+[m[32mimport { ProjectStatus } from '../../domain/value-objects/project-status';[m
[32m+[m[32mimport { ProjectPriority } from '../../domain/value-objects/project-priority';[m
[32m+[m[32mimport { createProjectId } from '../../domain/value-objects/project-id';[m
[32m+[m[32mimport {[m
[32m+[m[32m  CreateProjectDto,[m
[32m+[m[32m  UpdateProjectDto,[m
[32m+[m[32m  ProjectResponseDto,[m
[32m+[m[32m} from '../dto/project-dtos';[m
[32m+[m[32mimport { Result } from '../../shared/errors/result';[m
[32m+[m[32mimport { AppError } from '../../shared/errors/app-error';[m
[32m+[m
[32m+[m[32mexport class ProjectService {[m
[32m+[m[32m  constructor(private readonly projectRepository: IProjectRepository) {}[m
[32m+[m
[32m+[m[32m  private toResponseDto(project: Project): ProjectResponseDto {[m
[32m+[m[32m    return {[m
[32m+[m[32m      id: project.id,[m
[32m+[m[32m      name: project.name.getValue(),[m
[32m+[m[32m      description: project.description,[m
[32m+[m[32m      status: project.status,[m
[32m+[m[32m      priority: project.priority,[m
[32m+[m[32m      createdAt: project.createdAt.toISOString(),[m
[32m+[m[32m    };[m
[32m+[m[32m  }[m
[32m+[m
[32m+[m[32m  async createProject([m
[32m+[m[32m    dto: CreateProjectDto[m
[32m+[m[32m  ): Promise<Result<ProjectResponseDto, AppError>> {[m
[32m+[m[32m    const project = Project.create({[m
[32m+[m[32m      id: createProjectId(crypto.randomUUID()),[m
[32m+[m[32m      name: ProjectName.create(dto.name),[m
[32m+[m[32m      description: dto.description,[m
[32m+[m[32m      status: dto.status as ProjectStatus,[m
[32m+[m[32m      priority: dto.priority as ProjectPriority,[m
[32m+[m[32m      createdAt: new Date(),[m
[32m+[m[32m    });[m
[32m+[m
[32m+[m[32m    const result = await this.projectRepository.create(project);[m
[32m+[m[32m    if (!result.success) {[m
[32m+[m[32m      return Result.failure(result.error);[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    return Result.success(this.toResponseDto(result.value));[m
[32m+[m[32m  }[m
[32m+[m
[32m+[m[32m  async updateProject([m
[32m+[m[32m    id: string,[m
[32m+[m[32m    dto: UpdateProjectDto[m
[32m+[m[32m  ): Promise<Result<ProjectResponseDto, AppError>> {[m
[32m+[m[32m    const projectId = createProjectId(id);[m
[32m+[m
[32m+[m[32m    // Usamos un tipo espec√≠fico en lugar de Partial<Project> porque[m
[32m+[m[32m    // las propiedades expuestas en Project son de solo lectura (getters).[m
[32m+[m[32m    const partial: {[m
[32m+[m[32m      name?: ProjectName;[m
[32m+[m[32m      description?: string;[m
[32m+[m[32m      status?: ProjectStatus;[m
[32m+[m[32m      priority?: ProjectPriority;[m
[32m+[m[32m    } = {};[m
[32m+[m[32m    if (dto.name !== undefined) {[m
[32m+[m[32m      partial.name = ProjectName.create(dto.name);[m
[32m+[m[32m    }[m
[32m+[m[32m    if (dto.description !== undefined) {[m
[32m+[m[32m      partial.description = dto.description;[m
[32m+[m[32m    }[m
[32m+[m[32m    if (dto.status !== undefined) {[m
[32m+[m[32m      partial.status = dto.status as ProjectStatus;[m
[32m+[m[32m    }[m
[32m+[m[32m    if (dto.priority !== undefined) {[m
[32m+[m[32m      partial.priority = dto.priority as ProjectPriority;[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    const result = await this.projectRepository.update(projectId, partial);[m
[32m+[m[32m    if (!result.success) {[m
[32m+[m[32m      return Result.failure(result.error);[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    return Result.success(this.toResponseDto(result.value));[m
[32m+[m[32m  }[m
