[1mdiff --git a/backend/src/application/services/client-service.ts b/backend/src/application/services/client-service.ts[m
[1mnew file mode 100644[m
[1mindex 0000000..7e0aec9[m
[1m--- /dev/null[m
[1m+++ b/backend/src/application/services/client-service.ts[m
[36m@@ -0,0 +1,136 @@[m
[32m+[m[32mimport { IClientRepository } from '../../domain/repos-interfaces/client-repository';[m
[32m+[m[32mimport { Client } from '../../domain/entities/client';[m
[32m+[m[32mimport { ClientType } from '../../domain/value-objects/client-type';[m
[32m+[m[32mimport { MoneyDOP } from '../../domain/value-objects/money-dop';[m
[32m+[m[32mimport { createClientId } from '../../domain/value-objects/client-id';[m
[32m+[m[32mimport {[m
[32m+[m[32m  ClientResponseDto,[m
[32m+[m[32m  CreateClientDto,[m
[32m+[m[32m  PaginatedClientsResponseDto,[m
[32m+[m[32m  UpdateClientDto,[m
[32m+[m[32m} from '../dto/client-dtos';[m
[32m+[m[32mimport { Result } from '../../shared/errors/result';[m
[32m+[m[32mimport { AppError } from '../../shared/errors/app-error';[m
[32m+[m
[32m+[m[32mexport class ClientService {[m
[32m+[m[32m  constructor(private readonly clientRepository: IClientRepository) {}[m
[32m+[m
[32m+[m[32m  private toResponseDto(client: Client): ClientResponseDto {[m
[32m+[m[32m    return {[m
[32m+[m[32m      id: client.id,[m
[32m+[m[32m      name: client.name,[m
[32m+[m[32m      type: client.type,[m
[32m+[m[32m      email: client.email,[m
[32m+[m[32m      phone: client.phone,[m
[32m+[m[32m      lifetimeValue: client.lifetimeValue?.getAmount(),[m
[32m+[m[32m      createdAt: client.createdAt.toISOString(),[m
[32m+[m[32m    };[m
[32m+[m[32m  }[m
[32m+[m
[32m+[m[32m  async createClient([m
[32m+[m[32m    dto: CreateClientDto[m
[32m+[m[32m  ): Promise<Result<ClientResponseDto, AppError>> {[m
[32m+[m[32m    const client = Client.create({[m
[32m+[m[32m      id: createClientId(crypto.randomUUID()),[m
[32m+[m[32m      name: dto.name.trim(),[m
[32m+[m[32m      type: dto.type as ClientType,[m
[32m+[m[32m      email: dto.email?.trim(),[m
[32m+[m[32m      phone: dto.phone?.trim(),[m
[32m+[m[32m      lifetimeValue:[m
[32m+[m[32m        dto.lifetimeValue !== undefined[m
[32m+[m[32m          ? MoneyDOP.create(dto.lifetimeValue)[m
[32m+[m[32m          : undefined,[m
[32m+[m[32m      createdAt: new Date(),[m
[32m+[m[32m    });[m
[32m+[m
[32m+[m[32m    const result = await this.clientRepository.create(client);[m
[32m+[m[32m    if (!result.success) {[m
[32m+[m[32m      return Result.failure(result.error);[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    return Result.success(this.toResponseDto(result.value));[m
[32m+[m[32m  }[m
[32m+[m
[32m+[m[32m  async updateClient([m
[32m+[m[32m    id: string,[m
[32m+[m[32m    dto: UpdateClientDto[m
[32m+[m[32m  ): Promise<Result<ClientResponseDto, AppError>> {[m
[32m+[m[32m    const clientId = createClientId(id);[m
[32m+[m
[32m+[m[32m    const partial: {[m
[32m+[m[32m      name?: string;[m
[32m+[m[32m      type?: ClientType;[m
[32m+[m[32m      email?: string;[m
[32m+[m[32m      phone?: string;[m
[32m+[m[32m      lifetimeValue?: MoneyDOP;[m
[32m+[m[32m    } = {};[m
[32m+[m
[32m+[m[32m    if (dto.name !== undefined) {[m
[32m+[m[32m      partial.name = dto.name.trim();[m
[32m+[m[32m    }[m
[32m+[m[32m    if (dto.type !== undefined) {[m
[32m+[m[32m      partial.type = dto.type as ClientType;[m
[32m+[m[32m    }[m
[32m+[m[32m    if (dto.email !== undefined) {[m
[32m+[m[32m      partial.email = dto.email.trim();[m
[32m+[m[32m    }[m
[32m+[m[32m    if (dto.phone !== undefined) {[m
[32m+[m[32m      partial.phone = dto.phone.trim();[m
[32m+[m[32m    }[m
[32m+[m[32m    if (dto.lifetimeValue !== undefined) {[m
[32m+[m[32m      partial.lifetimeValue = MoneyDOP.create(dto.lifetimeValue);[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    const result = await this.clientRepository.update(clientId, partial);[m
[32m+[m[32m    if (!result.success) {[m
[32m+[m[32m      return Result.failure(result.error);[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    return Result.success(this.toResponseDto(result.value));[m
[32m+[m[32m  }[m
[32m+[m
[32m+[m[32m  async deleteClient(id: string): Promise<Result<void, AppError>> {[m
[32m+[m[32m    const clientId = createClientId(id);[m
[32m+[m[32m    return this.clientRepository.delete(clientId);[m
[32m+[m[32m  }[m
[32m+[m
[32m+[m[32m  async getAllClients([m
[32m+[m[32m    page: number,[m
[32m+[m[32m    pageSize: number[m
[32m+[m[32m  ): Promise<Result<PaginatedClientsResponseDto, AppError>> {[m
[32m+[m[32m    // Usamos el repositorio paginado de infraestructura.[m
[32m+[m[32m    // Aunque el interface de dominio no lo expone, se puede ampliar ah√≠ si lo deseas;[m
[32m+[m[32m    // por ahora asumimos que la implementaci√≥n concreta tiene este m√©todo.[m
[32m+[m[32m    // @ts-expect-error: m√©todo espec√≠fico de la implementaci√≥n[m
[32m+[m[32m    const result = await this.clientRepository.findAllPaginated(page, pageSize);[m
[32m+[m[32m    if (!result.success) {[m
[32m+[m[32m      return Result.failure(result.error);[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    const mapped: PaginatedClientsResponseDto = {[m
[32m+[m[32m      items: result.value.items.map((client: Client) =>[m
[32m+[m[32m        this.toResponseDto(client)[m
[32m+[m[32m      ),[m
[32m+[m[32m      total: result.value.total,[m
[32m+[m[32m      page: result.value.page,[m
[32m+[m[32m      pageSize: result.value.pageSize,[m
[32m+[m[32m      totalPages: result.value.totalPages,[m
[32m+[m[32m    };[m
[32m+[m
[32m+[m[32m    return Result.success(mapped);[m
[32m+[m[32m  }[m
[32m+[m
[32m+[m[32m  async getClientById([m
[32m+[m[32m    id: string[m
[32m+[m[32m  ): Promise<Result<ClientResponseDto, AppError>> {[m
[32m+[m[32m    const clientId = createClientId(id);[m
[32m+[m[32m    const result = await this.clientRepository.findById(clientId);[m
[32m+[m[32m    if (!result.success) {[m
[32m+[m[32m      return Result.failure(result.error);[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    return Result.success(this.toResponseDto(result.value));[m
[32m+[m[32m  }[m
[32m+[m[32m}[m
[32m+[m
